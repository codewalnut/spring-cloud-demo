server:
  port: 8220

spring:
  application:
    name: service-zuul

eureka:
  client:
    service-url:
      defaultZone: http://${REGISTRY_SERVER_USER:user}:${REGISTRY_SERVER_PASSWORD:abcd1234}@peer1:8761/eureka/,http://${REGISTRY_SERVER_USER:user}:${REGISTRY_SERVER_PASSWORD:abcd1234}@peer2:8762/eureka/

zuul:
  routes:
    api-a:
      path: /api-a/**
      serviceId: service-ribbon
    api-b:
      path: /api-b/**
      serviceId: service-feign

management:
  endpoints:
    web:
      exposure:
        include: "*"