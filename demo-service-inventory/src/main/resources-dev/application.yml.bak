spring:
  application:
    name: service-demo

server:
  port: 8100

eureka:
  instance:
    hostname: ${spring.cloud.client.ip-address}
  client:
    service-url:
      defaultZone: http://${REGISTRY_SERVER_USER:user}:${REGISTRY_SERVER_PASSWORD:abcd1234}@peer1:8761/eureka/,http://${REGISTRY_SERVER_USER:user}:${REGISTRY_SERVER_PASSWORD:abcd1234}@peer2:8762/eureka/

feign:
  hystrix:
    enabled: true

hystrix:
  command:
    default:
      execution:
        timeout:
          #如果enabled设置为false，则请求超时交给ribbon控制,为true,则超时作为熔断根据
          enabled: true
        isolation:
          thread:
            timeoutInMilliseconds: 1000